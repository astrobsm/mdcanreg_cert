# Production environment settings for MDCAN BDM 2025 Certificate Platform

# React optimizations
GENERATE_SOURCEMAP=false
REACT_APP_API_URL=https://api.mdcan-bdm2025.vercel.app
INLINE_RUNTIME_CHUNK=true
REACT_APP_ENV=production

# Performance tuning
FAST_REFRESH=true
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true

# Content Security Policy settings
REACT_APP_CSP_CONNECT_SRC="'self' https://api.mdcan-bdm2025.vercel.app https://fonts.googleapis.com https://fonts.gstatic.com"
REACT_APP_CSP_IMG_SRC="'self' data: blob: https://api.mdcan-bdm2025.vercel.app"
REACT_APP_CSP_FONT_SRC="'self' https://fonts.googleapis.com https://fonts.gstatic.com"

# Feature flags
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=true
