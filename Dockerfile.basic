# Ultra-simple Dockerfile for Digital Ocean App Platform
FROM python:3.9-slim

WORKDIR /app

# Install minimal dependencies
RUN pip install --no-cache-dir flask gunicorn

# Copy only the essential file
COPY basic_app.py .

# Set environment variables
ENV PYTHONUNBUFFERED=1

# Expose port 8080 - critical for Digital Ocean
EXPOSE 8080

# Use the simplest possible command
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "basic_app:app"]
